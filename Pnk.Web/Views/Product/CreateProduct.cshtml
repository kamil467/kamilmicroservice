@using Pnk.Web.Models.ViewModel
@model ProductViewModel
@{
    ViewData["Title"] = "Create New Product";
}
<h1>Update Product</h1>
<form asp-controller="Product" asp-action="createproduct-post" method="post">
    <div class="form-group">
        <label for="product-name">Product Name:</label>
        <input type="text" class="form-control" id="productnameinput" aria-describedby="productname" placeholder="Enter Product name" asp-for="@Model.Name" >

    </div>

    <div class="form-group">
        <label for="product-description">Product Description:</label>
        <input type="text" class="form-control" id="productdesinput" aria-describedby="productdesc" placeholder="Enter Product Description" asp-for="@Model.Description" >

    </div>

    <div class="form-group">
        <label for="product-price">Product Price:</label>
        <input type="text" class="form-control" id="productpriceinput" aria-describedby="productprice" placeholder="Enter Product Price" asp-for="@Model.Price" >

    </div>

    <div class="form-group">
        <label for="product-catename">Product Category Name:</label>
        <input type="text" class="form-control" id="productcatnameinput" aria-describedby="productcatname" placeholder="Enter Product name" asp-for="@Model.CategoryName" >

    </div>

    <div class="form-group">
        <label for="product-image-url">Product Image URL:</label>
        <input type="text" class="form-control" id="productimageinput" aria-describedby="productimage" placeholder="Enter Product Image" asp-for="@Model.ImageUrl" >
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>

